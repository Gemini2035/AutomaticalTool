{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs", // 或 "esnext" 视项目需求而定
    "moduleResolution": "node",
    "baseUrl": "./", // 设定基础目录
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./packages",
    "paths": {
      "*": ["node_modules/*"], // 添加路径别名
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
  },
  "include": ["src/**/*"],
}
